SOURCE_TRANSLATION_TTT
FILE="";
FORMAT="$1";
let "nbfiles = $# -1"
trap 'qdbus $dbusRef close 2>/dev/null' EXIT
dbusRef=`kdialog --progressbar "$(gettext "Kim — Initialising…")" $nbfiles`
qdbus $dbusRef showCancelButton "true"

counter=0
for i in "$@";do
    if [ -f "$i" ];then
        #test if cancel button has been pushed
        if [[ "$(qdbus $dbusRef wasCancelled)" == "true" ]] ; then
            exit 1
        fi
        let "counter +=1"
        FILE="$i"
        qdbus $dbusRef setLabelText "$(gettext "Kim — Converting file:") `basename -- "$FILE"`"
        if ! error_output=$(mogrify -format $FORMAT -- "$FILE" 2>&1); then
            kdialog --title "$(gettext "Kim — Error")" --error "$(gettext "Converting failed for file:") $(basename -- "$FILE")\n\n$(gettext "Error:") $error_output\n\n$(gettext "Note: On some systems, you may need to install additional ImageMagick packages (e.g., ImageMagick-heic for HEIC support on Fedora).")"
        fi
        qdbus $dbusRef org.freedesktop.DBus.Properties.Set org.kde.kdialog.ProgressDialog value $counter
    fi;
done

