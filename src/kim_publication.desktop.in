[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin,image/*
Actions=Rename;SortByDate;SendByMail;_SEPARATOR_;PeleMele;Galery;_SEPARATOR_;Watermark;Border;_SEPARATOR_;Animation;Multiburst;Adjoin;_SEPARATOR_;License;Apropos;
Encoding=UTF-8
_X-KDE-Submenu=Kim – Treatment and publication

[Desktop Action Galery]
_Name=Create a html gallery
Icon=applications-development-web
Exec=kim_galery %U

[Desktop Action PeleMele]
_Name=Create a photo montage
Icon=image
Exec=kim_pelemele %U

[Desktop Action SendByMail]
_Name=Send by mail
Icon=kmail
Exec=kim_resizeandsend %U

[Desktop Action SortByDate]
_Name=Sort by date
Icon=view-sort-descending
Exec=kim_sortbydate %D %U

[Desktop Action Rename]
_Name=Rename images
Icon=edit-rename
Exec=kim_rename %D %U

[Desktop Action Adjoin]
_Name=Create a multi-files Tiff image
Icon=attach
Exec=magick -adjoin %U my_images.tiff

[Desktop Action Animation]
_Name=Create a gif animation
Icon=video
Exec=magick %U -set delay `kdialog --inputbox "Kim – Delay between images in centiseconds (100 is one second, 50 is half a second):" 100` -loop 0 my_animation.gif

[Desktop Action Multiburst]
_Name=Multiburst image to gif animation
Icon=video
Exec=kim_multiburst %u

[Desktop Action Border]
_Name=Add a border
Icon=image
Exec=kim_treatment border %D %U

[Desktop Action Album]
_Name=Create a pdf album
Icon=pdf
Exec=kim_album %D %U

[Desktop Action Watermark]
_Name=Add text annotation
Icon=text
Exec=kim_treatment mark %D %U

[Desktop Action License]
_Name=License
Icon=help-about
Exec=kim_other license %U

[Desktop Action Apropos]
_Name=About Kim
Icon=help-about
Exec=kim_other about %U
